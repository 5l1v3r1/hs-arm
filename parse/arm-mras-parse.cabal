  build-depends:      base >=4.8 && <5

                    , arm-mras-types
                    , arm-mras-dtd-sysreg
                    , arm-mras-dtd-a64
                    , arm-mras-dtd-aarch32

                    , deepseq
                    , directory
                    , exceptions
                    , filepath
                    , HaXml
                    , lens
                    , monad-logger
                    , mtl
                    , pretty
                    , text
                    , transformers
