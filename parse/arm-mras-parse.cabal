  default-language:   Haskell2010

  exposed-modules:    ARM.MRAS.Parse
                    , ARM.MRAS.Parse.Internal.Distill
                    , ARM.MRAS.Parse.Internal.Tidy
                    , ARM.MRAS.Parse.Internal.SharedPs
