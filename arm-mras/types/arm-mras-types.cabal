  default-language:   Haskell2010

  exposed-modules:    ARM.MRAS.Types
                    , ARM.MRAS.Types.Diagram
                    , ARM.MRAS.Types.Table
                    , ARM.MRAS.Parse
                    , ARM.MRAS.Parse.IO
                    , ARM.MRAS.Parse.Internal.Distill
