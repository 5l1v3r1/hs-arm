  build-depends:      base >=4.8 && <5

                    , arm-mras-dtd-sysreg
                    , arm-mras-dtd-a64
                    , arm-mras-dtd-aarch32

                    , attoparsec
                    , bytestring
                    , Cabal
                    , deepseq
                    , directory
                    , exceptions
                    , filepath
                    , haskell-src-exts
                    , HaXml
                    , monad-logger
                    , mtl
                    , pretty
                    , text
                    , transformers
