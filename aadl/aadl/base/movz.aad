// MOVZ  <Wd>, #<imm>{, LSL #<shift>}
insn MOVZ_32_movewide {
    $wd
    imm UInt16 as imm16
    shift BitIx32 in hw as {
        0 0
        1 16
    }
}

// MOVZ  <Xd>, #<imm>{, LSL #<shift>}
insn MOVZ_64_movewide {
    $xd
    imm UInt16 as imm16
    shift BitIx64 in hw as {
        0 0
        1 16
        2 32
        3 48
    }
}
